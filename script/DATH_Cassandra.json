CREATE KeySpace DATH with replication ={
	‘class’: ‘SimpleStrategy’
	‘replication_factor’: 1
}
CREATE Table DATH.Customer (
	customer_id		INT,
	full_name		TEXT,
	display_name		TEXT,
	date_of_birth		DATE,
	nationality		TEXT,
	gender			TEXT,
	address			TEXT,
	language		TEXT,
	currency		TEXT,
	password		TEXT,
	avatar			TEXT,
	PRIMARY KEY(customer_id)
)

CREATE Table DATH.PaymentDetail (
	customer_id		INT,
	payment_method		TEXT,
	cardholder_name		TEXT,
	card_number		BIGINT,
	expire_date		DATE,
	CVC			TEXT,
	PRIMARY KEY(customer_id)
)